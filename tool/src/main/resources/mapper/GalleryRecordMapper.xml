<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tool.mapper.GalleryRecordMapper">
    
    <!-- 基础结果映射 -->
    <resultMap id="BaseResultMap" type="com.tool.entity.GalleryRecord">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="title" property="title" jdbcType="VARCHAR"/>
        <result column="description" property="description" jdbcType="LONGVARCHAR"/>
        <result column="code" property="code" jdbcType="LONGVARCHAR"/>
        <result column="language" property="language" jdbcType="VARCHAR"/>
        <result column="created_at" property="createdAt" jdbcType="TIMESTAMP"/>
        <result column="updated_at" property="updatedAt" jdbcType="TIMESTAMP"/>
    </resultMap>
    
    <!-- 包含图片的结果映射 -->
    <resultMap id="RecordWithImagesResultMap" type="com.tool.entity.GalleryRecord" extends="BaseResultMap">
        <collection property="images" ofType="com.tool.entity.GalleryImage">
            <id column="img_id" property="id" jdbcType="BIGINT"/>
            <result column="img_name" property="name" jdbcType="VARCHAR"/>
            <result column="img_data" property="imageData" jdbcType="LONGVARCHAR"/>
            <result column="img_file_size" property="fileSize" jdbcType="BIGINT"/>
            <result column="img_content_type" property="contentType" jdbcType="VARCHAR"/>
            <result column="img_created_at" property="createdAt" jdbcType="TIMESTAMP"/>
            <result column="img_record_id" property="recordId" jdbcType="BIGINT"/>
        </collection>
    </resultMap>
    
    <!-- 基础SQL片段 -->
    <sql id="Base_Column_List">
        id, title, description, code, language, created_at, updated_at
    </sql>
    
    <!-- 根据ID查询记录 -->
    <select id="selectById" parameterType="java.lang.Long" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM gallery_records
        WHERE id = #{id}
    </select>
    
    <!-- 查询所有记录 -->
    <select id="selectAll" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM gallery_records
        ORDER BY created_at DESC
    </select>
    
    <!-- 分页查询记录 -->
    <select id="selectByPage" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM gallery_records
        ORDER BY created_at DESC
        LIMIT #{size} OFFSET #{offset}
    </select>
    
    <!-- 根据标题搜索记录 -->
    <select id="selectByTitle" parameterType="java.lang.String" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM gallery_records
        WHERE title LIKE CONCAT('%', #{title}, '%')
        ORDER BY created_at DESC
    </select>
    
    <!-- 统计记录总数 -->
    <select id="count" resultType="int">
        SELECT COUNT(*) FROM gallery_records
    </select>
    
    <!-- 根据标题统计记录数 -->
    <select id="countByTitle" parameterType="java.lang.String" resultType="int">
        SELECT COUNT(*) FROM gallery_records
        WHERE title LIKE CONCAT('%', #{title}, '%')
    </select>
    
    <!-- 插入记录 -->
    <insert id="insert" parameterType="com.tool.entity.GalleryRecord" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO gallery_records (title, description, code, language, created_at, updated_at)
        VALUES (#{title}, #{description}, #{code}, #{language}, #{createdAt}, #{updatedAt})
    </insert>
    
    <!-- 更新记录 -->
    <update id="update" parameterType="com.tool.entity.GalleryRecord">
        UPDATE gallery_records
        SET title = #{title},
            description = #{description},
            code = #{code},
            language = #{language},
            updated_at = #{updatedAt}
        WHERE id = #{id}
    </update>
    
    <!-- 根据ID删除记录 -->
    <delete id="deleteById" parameterType="java.lang.Long">
        DELETE FROM gallery_records WHERE id = #{id}
    </delete>
    
    <!-- 查询记录及其关联的图片 -->
    <select id="selectWithImages" parameterType="java.lang.Long" resultMap="RecordWithImagesResultMap">
        SELECT 
            r.id, r.title, r.description, r.code, r.language, r.created_at, r.updated_at,
            i.id as img_id, i.name as img_name, i.image_data as img_data, 
            i.file_size as img_file_size, i.content_type as img_content_type, 
            i.created_at as img_created_at, i.record_id as img_record_id
        FROM gallery_records r
        LEFT JOIN gallery_images i ON r.id = i.record_id
        WHERE r.id = #{id}
    </select>
    
    <!-- 分页查询记录及其关联的图片 -->
    <select id="selectWithImagesByPage" resultMap="RecordWithImagesResultMap">
        SELECT 
            r.id, r.title, r.description, r.code, r.language, r.created_at, r.updated_at,
            i.id as img_id, i.name as img_name, i.image_data as img_data, 
            i.file_size as img_file_size, i.content_type as img_content_type, 
            i.created_at as img_created_at, i.record_id as img_record_id
        FROM gallery_records r
        LEFT JOIN gallery_images i ON r.id = i.record_id
        ORDER BY r.created_at DESC
        LIMIT #{size} OFFSET #{offset}
    </select>
    
</mapper>