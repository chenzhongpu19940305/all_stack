<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tool.mapper.GalleryRecordMapper">
    
    <!-- 结果映射 -->
    <resultMap id="BaseResultMap" type="com.tool.entity.GalleryRecord">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="title" property="title" jdbcType="VARCHAR"/>
        <result column="created_at" property="createdAt" jdbcType="TIMESTAMP"/>
        <result column="updated_at" property="updatedAt" jdbcType="TIMESTAMP"/>
    </resultMap>
    
    <!-- 基础字段 -->
    <sql id="Base_Column_List">
        id, title, created_at, updated_at
    </sql>
    
    <!-- 获取所有记录 -->
    <select id="selectAll" resultMap="BaseResultMap">
        SELECT 
        <include refid="Base_Column_List"/>
        FROM gallery_records
        ORDER BY created_at DESC
    </select>
    
    <!-- 根据ID获取记录 -->
    <select id="selectById" parameterType="java.lang.Long" resultMap="BaseResultMap">
        SELECT 
        <include refid="Base_Column_List"/>
        FROM gallery_records
        WHERE id = #{id}
    </select>
    
    <!-- 根据标题搜索记录 -->
    <select id="selectByTitle" parameterType="java.lang.String" resultMap="BaseResultMap">
        SELECT 
        <include refid="Base_Column_List"/>
        FROM gallery_records
        WHERE title LIKE CONCAT('%', #{title}, '%')
        ORDER BY created_at DESC
    </select>
    
    <!-- 插入新记录 -->
    <insert id="insert" parameterType="com.tool.entity.GalleryRecord" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO gallery_records (title, created_at, updated_at)
        VALUES (#{title}, #{createdAt}, #{updatedAt})
    </insert>
    
    <!-- 更新记录 -->
    <update id="update" parameterType="com.tool.entity.GalleryRecord">
        UPDATE gallery_records
        SET title = #{title},
            updated_at = #{updatedAt}
        WHERE id = #{id}
    </update>
    
    <!-- 删除记录 -->
    <delete id="deleteById" parameterType="java.lang.Long">
        DELETE FROM gallery_records
        WHERE id = #{id}
    </delete>
    
</mapper> 