{
	"info": {
		"_postman_id": "gallery-api-collection",
		"name": "Gallery API 测试集合",
		"description": "Gallery相关接口的Postman测试集合，包含记录管理和图片上传功能",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "获取所有记录",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"url": {
					"raw": "{{baseUrl}}/api/gallery/records",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"api",
						"gallery",
						"records"
					]
				},
				"description": "获取所有AI问答记录列表"
			},
			"response": []
		},
		{
			"name": "搜索记录",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"query\": \"AI问答\"\n}"
				},
				"url": {
					"raw": "{{baseUrl}}/api/gallery/records/search",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"api",
						"gallery",
						"records",
						"search"
					]
				},
				"description": "根据关键词搜索AI问答记录"
			},
			"response": []
		},
		{
			"name": "创建新记录",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"title\": \"测试AI问答记录\",\n  \"images\": [\n    {\n      \"id\": 1,\n      \"name\": \"test-image.jpg\",\n      \"imageData\": \"data:image/jpeg;base64,\",\n      \"fileSize\": 1024,\n      \"contentType\": \"image/jpeg\",\n      \"createdAt\": \"2024-01-01T10:00:00\"\n    }\n  ]\n}"
				},
				"url": {
					"raw": "{{baseUrl}}/api/gallery/records",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"api",
						"gallery",
						"records"
					]
				},
				"description": "创建新的AI问答记录"
			},
			"response": []
		},
		{
			"name": "获取单个记录详情",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"url": {
					"raw": "{{baseUrl}}/api/gallery/records/{{recordId}}",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"api",
						"gallery",
						"records",
						"{{recordId}}"
					]
				},
				"description": "根据ID获取单个记录的详细信息"
			},
			"response": []
		},
		{
			"name": "删除记录",
			"request": {
				"method": "DELETE",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"url": {
					"raw": "{{baseUrl}}/api/gallery/records/{{recordId}}",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"api",
						"gallery",
						"records",
						"{{recordId}}"
					]
				},
				"description": "根据ID删除指定的记录"
			},
			"response": []
		},
		{
			"name": "上传图片",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "multipart/form-data"
					}
				],
				"body": {
					"mode": "formdata",
					"formdata": [
						{
							"key": "image",
							"type": "file",
							"src": []
						}
					]
				},
				"url": {
					"raw": "{{baseUrl}}/api/gallery/upload",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"api",
						"gallery",
						"upload"
					]
				},
				"description": "上传图片文件"
			},
			"response": []
		}
	],
	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"exec": [
					""
				]
			}
		},
		{
			"listen": "test",
			"script": {
				"type": "text/javascript",
				"exec": [
					""
				]
			}
		}
	],
	"variable": [
		{
			"key": "baseUrl",
			"value": "http://localhost:8080/cpsc/privacy/testmock",
			"type": "string"
		},
		{
			"key": "recordId",
			"value": "1",
			"type": "string"
		}
	]
} 