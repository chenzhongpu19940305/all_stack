      "name": "获取视频记录列表",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/videogallery/records",
          "host": ["{{baseUrl}}"],
          "path": ["api", "videogallery", "records"]
        },
        "description": "获取所有视频记录列表"
      },
      "response": []
    },
    {
      "name": "搜索视频记录",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"query\": \"搜索关键词\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/videogallery/records/search",
          "host": ["{{baseUrl}}"],
          "path": ["api", "videogallery", "records", "search"]
